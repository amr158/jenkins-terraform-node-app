pipeline {
    agent any
    stages {
        stage('build infrastructure') {
            steps {
                withAWS(credentials: 'amr_gehad', region: 'eu-west-1') {
                    dir("terraform") { 
                        // sh 'terraform init -reconfigure'
                        // sh 'terraform apply --var-file dev.tfvars -auto-approve'
                        sh 'bastion_ip=$(terraform output --raw bastion1-ip)'
                        sh 'private_ip=$(terraform output --raw private-ip)'
                        sh 'echo bastion_ip=$bastion_ip'
                    }
                    dir(""){
                        sh 'echo bastion_ip=$bastion_ip'
                        sh 'cp terraform/key-pair.pem ~/.ssh/private_key.pem'
                        sh 'chmod 600 ~/.ssh/private_key.pem'
                        sh 'chmod 777 jumphost.sh'
                        sh '. ./jumphost.sh'
                    }
                }
            }
        }
        stage('configure application instance') {
            steps {
                dir("ansible") { 
                    sh 'ansible-playbook -i inventory playbook.yaml'
                }
            }
        }
    }
}
