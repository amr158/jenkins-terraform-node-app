pipeline {
    agent any
    stages {
        stage('intitialize infrastructure') {
            steps {
                withAWS(credentials: 'aws', region: 'us-west-1') {
                    sh 'cd terraform'
                    sh 'terraform init -reconfigure'
                }
            }
        }

        stage('build infrastructure') {
            steps {
                withAWS(credentials: 'aws', region: 'us-west-1') {
                    sh 'terraform apply --var-file dev.tfvars'
                }
            }
        }
    }
}
